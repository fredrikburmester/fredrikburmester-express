extends layout

block content
  nav#navbar
  
  .fullscreen#fullscreen

  .hamburger(onclick="toggleMenu()")
    .line#line1
    .line#line2
    .line#line3

  .logos
    a(href="https://www.facebook.com/alltidifokus/")
      img(class="logo" src="/images/social-media-images/fb.png", alt="facebook")
    a(href="https://www.instagram.com/fredrikburmester")
      img(class="logo" src="/images/social-media-images/ig.png", alt="instagram")

  .menu#menu
    ul(class="menu-links")
      each link in links
        li 
          a(href=`/${link}` class="menu-link")= link

  .container
    .information
      a(href="/", id="title") FB
      h1(id="subtitle") photographer
      h1(id="album-name")= title 
      p(id="description")= description
    
    .gallery
        each image, index in images
          .gallery-image-container(class=`${image['display']}`)
            img(src='https://fredrikburmester.com/static/images/' + link + '/' + image['filename'], 
                alt="",
                class="gallery-image"
                onclick=`openLightbox(${index})`
            )
    
    .lightbox#lightbox